                <path fill="#4285F4" d="M24 9c3.1 0 6 .9 8.3 2.6l6.2-6.2C34.5 4.5 29.5 3 24 3c-7.9 0-14.8 4.2-18.8 10.6L12.6 18C14.4 13.7 18.8 9 24 9z" />
                <path fill="#34A853" d="M3 24c0 3.3.8 6.3 2.1 9L12.6 30c-1-2.1-1.6-4.4-1.6-6s.6-3.9 1.6-6l-7.5-3C3.8 17.7 3 20.7 3 24z" />
                <path fill="#FBBC05" d="M24 45c5.5 0 10.5-1.5 14.3-4.2l-7.3-6.2C28.8 36.1 26.4 37 24 37c-6.2 0-10.7-3.4-11.9-8.5l-7.5 3C9.2 40.8 15.6 45 24 45z" />
                <path fill="#EA4335" d="M44.5 20H24v8.5h11.9C34.7 33.6 30.2 37 24 37c-6.2 0-10.7-3.4-11.9-8.5l-7.5 3C9.2 40.8 15.6 45 24 45c11.1 0 20.1-8.4 20.1-21 0-1.3-.1-2.1-.3-3z" />
            </svg>
            Login with Google
        </a>
    </div>
</div>
